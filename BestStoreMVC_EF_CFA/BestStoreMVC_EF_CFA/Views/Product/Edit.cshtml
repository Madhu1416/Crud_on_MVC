@model BestStoreMVC_EF_CFA.Models.ProductDTO
@{

}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-5">
        <h2 class="text-center mb-3">Edit  Product</h2>

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <lable class="col-sm-4 form-label">ID</lable>
                <div class="col-sm-8">
                    <input class="form-control-plaintext"  readonly value="@ViewData["ProductId"]" />
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 form-label">Name</lable>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 form-label">Brand</lable>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 col-form-label"> Category</lable>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Catagory">
                        <option value="'Others'">Others</option>
                        <option value="'Phones'">Mobiles</option>
                        <option value="'Laptops'">Computers</option>
                        <option value="'Accessories'">Accessories</option>
                        <option value="'Printers'">Printers</option>
                        <option value="'Cameras'">Cameras</option>
                        <option value="'Mens Accessories'">Mens Accessories</option>
                    </select>
                </div>

            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 form-label">price $  </lable>

                <div class="col-sm-8">
                    <input class="form-control" asp-for="price" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 form-label">Description</lable>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                
                <div class=" offset-sm-4 col-sm-8">
                    <img src="~/Products/@ViewData["ImageFileName"]" width="100" />
                </div>
            </div>

            

            <div class="row mb-3">
                <label class="col-sm-4">Image</label>
                <div class="  col-sm-8">
                    <input class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <lable class="col-sm-4 form-label">CreateAt</lable>
                <div class="col-sm-8">
                    <input class="form-control" value="@ViewData["CreateAt"]" />
                   
                </div>
            </div>

            <div class=" row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-outline-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
            
        </form>
    </div>




</div>

